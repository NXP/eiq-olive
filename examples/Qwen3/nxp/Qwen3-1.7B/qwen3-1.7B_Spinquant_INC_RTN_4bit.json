{
    "input_model": { "type": "HfModel", "model_path": "Qwen/Qwen3-1.7B" },
    "systems": {
        "local_system": {
            "type": "LocalSystem",
            "accelerators": [ { "device": "cpu", "execution_providers": [ "CPUExecutionProvider" ] } ]
        }
    },
    "data_configs": [
        {
            "name": "inc_static_quant_data_config",
            "user_script": "user_script.py",
            "load_dataset_config": { "type": "simple_dataset" },
            "dataloader_config": { "type": "kv_dataloader",
                                    "batch_size": 1,
                                    "n_batches": 16}
        }
    ],
    "evaluators": {
        "winog_acc_evaluator": { "type": "LMEvaluator", "tasks": [ "winogrande" ], "batch_size": 1, "max_length": 128 },
        "wt2_ppl_evaluator": {
            "metrics": [
                {
                    "name": "wt2-ppl",
                    "type": "custom",
                    "sub_types": [ { "name": "custom"} ],
                    "user_config": {
                        "user_script": "user_script.py",
                        "evaluate_func": "eval_wt2_ppl",
                        "evaluate_func_kwargs": {"tasks": ["wikitext"],
                                                  "batch_size": 128}
                    }
                }
            ]
        }
    },
    "passes": {
        "quantization": {
            "type": "SpinQuant",
            "rotate_mode": "hadamard",
            "a_bits": 8
        },
        "convert": { "type": "ModelBuilder", "precision": "fp32", "override_search_opt": false },
        "quantization_rtn": {
            "type": "IncStaticQuantization",
            "approach": "weight_only",
            "weight_only_config": { "bits": 4, "algorithm": "RTN", "group_size" : 32, "scheme" : "sym" },
            "recipes": { "rtn_args": { "accuracy_level": 4 },
                         "graph_optimization_level": "ENABLE_EXTENDED",
                         "last_conv_or_matmul_quantization": false },
            "op_name_dict" : {
            "/model/embed_tokens/Gather": {
                "activation": {
                    "dtype": ["fp32"]
                },
                "weight": {
                    "dtype": ["fp32"]
                }
              },
            "/lm_head/MatMul": {
                "activation": {
                    "dtype": ["fp32"]
                },
                "weight": {
                    "dtype": ["fp32"]
                }
              }
            },
            "data_config": "inc_static_quant_data_config",
            "calibration_sampling_size": [ 512 ],
            "save_as_external_data": true,
            "all_tensors_to_one_file": true
        },
        "dynamic_quantization": { "type": "IncDynamicQuantization"
        }
    },
    "host": "local_system",
    "target": "local_system",
    "cache_dir": "cache",
    "output_dir": "models/qwen3_spinquant_4bit"
}
