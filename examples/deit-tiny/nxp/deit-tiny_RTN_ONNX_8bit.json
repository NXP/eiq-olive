{
    "input_model": {
        "type": "HfModel",
        "model_path": "facebook/deit-tiny-patch16-224",
        "task": "image-classification",
        "io_config": {
            "input_names": [ "input" ],
            "input_shapes": [ [ 1, 3, 224, 224 ] ],
            "output_names": [ "output" ]
        }
    },
    "systems": {
        "local_system": {
            "type": "LocalSystem",
            "accelerators": [
                    {
                        "device": "cpu"
                    }
                ]
        }
    },
    "data_configs": [
        {
            "name": "validate_data_config",
            "type": "HuggingfaceContainer",
            "user_script": "imagenet.py",
            "load_dataset_config": {
                "data_name": "imagenet-1k",
                "split": "validation",
                "streaming": true,
                "trust_remote_code": true
            },
            "pre_process_data_config": { "type": "dataset_pre_process", "size": 256, "cache_key": "imagenet256" },
            "post_process_data_config": { "type": "dataset_post_process" }
        },
        {
            "name": "train_data_config",
            "type": "HuggingfaceContainer",
            "user_script": "imagenet.py",
            "load_dataset_config": {
                "data_name": "imagenet-1k",
                "split": "train",
                "streaming": true,
                "trust_remote_code": true
            },
            "pre_process_data_config": { "type": "dataset_pre_process", "size": 1024, "cache_key": "imagenet1024" },
            "post_process_data_config": { "type": "dataset_post_process" }
        }
    ],
    "evaluators": {
        "common_evaluator": {
            "metrics": [
                {
                    "name": "accuracy",
                    "type": "accuracy",
                    "data_config": "validate_data_config",
                    "sub_types": [
                        {
                            "name": "accuracy_score",
                            "priority": 1,
                            "metric_config": { "task": "multiclass", "num_classes": 1001 }
                        }
                    ]
                },
                {
                    "name": "latency",
                    "type": "latency",
                    "data_config": "validate_data_config",
                    "sub_types": [ { "name": "avg", "priority": 2 } ]
                }
            ]
        }
    },
    "passes": {
        "conversion": {
            "device": "cpu",
            "type": "OnnxConversion",
            "target_opset": 17,
            "save_as_external_data": true,
            "all_tensors_to_one_file": true,
            "use_dynamo_exporter": false
        },
        "transformers_optimization": {
            "type": "OrtTransformersOptimization",
            "model_type": "vit",
            "optimization_options": {
                "use_multi_head_attention": true,
                "enable_skip_layer_norm": false
            },
            "use_gpu": false,
       	    "save_as_external_data": true,
            "all_tensors_to_one_file": true

        },
        "OnnxQuantization": {
            "type": "OnnxQuantization",
            "data_config": "train_data_config",
            "quant_mode" : "static",
            "quant_format" : "QDQ",
            "activation_type": "QInt8",
            "weight_type": "QInt8",
            "op_types_to_exclude" : [],
            "ActivationSymmetric" : false,
            "WeightSymmetric" : true,
            "calibrate_method": "MinMax",
	        "save_as_external_data": true,
	        "all_tensors_to_one_file": true,
            "quant_preprocess": true
        }
    },
    "host": "local_system",
    "target": "local_system",
    "evaluator": "common_evaluator",
    "evaluate_input_model": false,
    "output_dir": "deit-tiny_model"
}
